<resources>
    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="my_dialog_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/sbd_red</item>                   <!--header background-->
        <item name="android:windowBackground">@color/main_medium_dark</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/sbd_red</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/white</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/sbd_red</item>    <!--days of the week-->
    </style>

    <style name="ToolbarColor" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

</resources>